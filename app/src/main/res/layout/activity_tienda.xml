<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        tools:context=".Tienda" android:id="@+id/layoutTienda">

    <Button
            android:layout_width="457dp"
            android:layout_height="73dp"
            android:background="@color/yellow"
            android:id="@+id/button2"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_shoppingcar_foreground"
            android:background="@color/grey"
            android:id="@+id/checkOut" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/button2"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_heart_foreground"
            android:background="@color/grey"
            android:id="@+id/donaciones"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="196dp" app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintHorizontal_bias="0.498"/>
    <ImageButton
            android:layout_width="94dp"
            android:layout_height="95dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/balltwodog"
            android:background="@drawable/food"
            android:id="@+id/ball_button"
            android:contentDescription="TODO"
            tools:ignore="VectorDrawableCompat"
            android:layout_marginTop="192dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="72dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="72dp"
            android:layout_marginBottom="67dp" app:layout_constraintBottom_toTopOf="@+id/donaciones"
            android:layout_marginEnd="95dp" app:layout_constraintEnd_toStartOf="@+id/food_button"
            android:layout_marginRight="95dp"/>


    <ImageButton
            android:layout_width="94dp"
            android:layout_height="95dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/food"
            android:background="@drawable/food"
            android:id="@+id/food_button"
            android:contentDescription="TODO"
            tools:ignore="VectorDrawableCompat"
            android:layout_marginTop="96dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="72dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="72dp"
    />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
                android:id="@+id/nombre_paseador"
                android:textSize="42sp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintLeft_toRightOf="@+id/foto_paseador"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/colonia_paseador"
                android:textSize="25sp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toRightOf="@+id/foto_paseador"
                app:layout_constraintTop_toBottomOf="@+id/nombre_paseador"
        />

        <TextView
                android:id="@+id/descripcion_paseador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                app:layout_constraintTop_toBottomOf="@+id/foto_paseador"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/telefono_paseador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toRightOf="@+id/foto_paseador"
                app:layout_constraintTop_toBottomOf="@+id/colonia_paseador"

        />

        <TextView
                android:id="@+id/horario1_paseador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@+id/descripcion_paseador"
                app:layout_constraintRight_toRightOf="@+id/foto_paseador"

        />

        <TextView
                android:id="@+id/horario2_paseador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@+id/descripcion_paseador"
                app:layout_constraintLeft_toRightOf="@+id/horario1_paseador"

        />


        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/foto_paseador"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:padding="8dp"
                />
        <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/foto_paseador" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintVertical_bias="0.898"/>


</android.support.constraint.ConstraintLayout>